
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model Location {
  name String
  url  String
}

model Episode {
  url String
}

model Character {
  id        Int        @id
  name      String
  status    String
  species   String
  type      String?
  gender    String
  origin    Location   @relation("Origin")
  location  Location   @relation("Location")
  image     String
  episodes  Episode[]?  @relation("CharacterEpisodes", references: [url])
  url       String     @unique
  created   DateTime
}